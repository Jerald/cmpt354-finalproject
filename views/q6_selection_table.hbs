{{#if result}}
<table>
    <tr>
        <th>Assign</th>

        {{#each result.fields}}
            <th>{{this.name}}</th>
        {{/each}}
    </tr>
    {{#each result.rows}}
        <tr>
            <td>
                <input type="checkbox" name="q6_row{{@index}}_assign" id=""q6_row{{@index}}_assign"">
            </td>
            {{#each this}}
                <td>{{this}}</td>
            {{/each}}
        </tr>
    {{/each}}
</table>

<input type="submit" value="Submit">
{{else}}
    <p>No valid reviewers found for proposal id!</p>
{{/if}}